{
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "isolatedModules": true,
        "inlineSourceMap": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./Types"
        ],
        "declaration": true,
        "declarationDir": "Declaration"
    },
    "include": [
        "src/**/*.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "references": [
        {
            "path": "./KDInterface/KinkyDungeon"
        }
    ]
}